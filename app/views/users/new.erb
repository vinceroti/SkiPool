<div class="container">
	<form method="post" action="/users">

		<% if @errors %>
			<% @errors.each do |error| %>
			<h2><%= error %></h2>
			<% end %>
		<% end %>
		<br><br><label>First Name:</label><br>
		<input type = "text" placeholder="Enter First Name" name = user[first_name]>
		<br><br><label>Last Name:</label><br>
		<input type = "text" placeholder="Enter Last Name" name = user[last_name]>
		<br><br><label>Location:</label><br>
		<input type = "text" placeholder="Enter Location" name = "user[location]">
		<br><br><label>Email:</label><br>
		<input type = "text" placeholder="Enter Email" name="user[email]">
		<br><br><label>Password:</label><br>
		<input type = "password" placeholder="Enter Password" name = "user[password]">

<input type="submit" value="submit">
	</form>
</div>
